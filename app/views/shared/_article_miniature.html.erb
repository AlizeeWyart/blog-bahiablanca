<div class="article-miniature" id="<%= article.id %>">
  <div class="article-miniature-photo">
    <%= cl_image_tag article.photo %>
  </div>
  <div class="article-miniature-text">
    <h4 class="categ">
      <% article.regions.each do |region| %>
      <i class="fa fa-tag" aria-hidden="true"></i> <%= region.name %>
      <% end %>
      <% if !article.category.nil? %>
      <i class="fa fa-tag" aria-hidden="true"></i><%= article.category.name %>
      <% end %>
    </h4>
    <h3><%= article.title %></h2>
    <% avatar_url =  article.user.photo || "https://cdn4.iconfinder.com/data/icons/linecon/512/photo-512.png" %>
    <h4><i class="fa fa-calendar-o" aria-hidden="true"></i> <%= article.date.strftime("%e %b %Y") %> <i class="fa fa-heart-o" aria-hidden="true"></i> <%= article.likes %> <i class="fa fa-comment-o margin-left-20" aria-hidden="true"></i> <%= article.comments.count %>  <img class="user-photo" src="<%= avatar_url %>" alt="">Par <%= article.user.first_name %></h4>
    <p><%= article.short_description %></p>
  </div>
</div>
